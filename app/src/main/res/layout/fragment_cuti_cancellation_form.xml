<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/sectionTop"
        style="@style/my_cardview_style">

        <LinearLayout style="@style/linearlayout_form">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilAlasanBatal"
                style="@style/my_textinputlayout_style"
                android:hint="Alasan Batal">

                <EditText
                    android:id="@+id/txtAlasanBatal"
                    style="@style/form_edittext"

                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
